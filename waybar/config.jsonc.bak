{
        "layer": "bottom",
        "exclusive": false,
        "position": "top",
        "height": 32,
        "spacing": 0,
        "modules-left": [
                "hyprland/workspaces",
                "tray",
                "custom/lock",
                "custom/reboot",
                "custom/power"
        ],
        "modules-right": [
                "custom/notifications",
                "pulseaudio",
                "memory",
                "custom/cpu",
                "custom/gpu",
                "clock"
        ],
        "hyprland/workspaces": {
                "disable-scroll": false,
                "all-outputs": true,
                "format": "{icon}",
                "on-click": "activate",
                "persistent-workspaces": {
                        "*":[1,2,3,4,5,6,7,8,9]
                },
                "format-icons": {
                        "1": "󰣇",
                        "2": "󰈹",
                        "3": "󰇮",
                        "4": "",
                        "5": "",
                        "6": "",
                        "7": "",
                        "8": "",
                        "9": "󰖳",
                        "default": ""
                }
        },
        "custom/lock": {
                "format": "<span color='#7dcfff'>  </span>",
                "on-click": "hyprlock",
                "tooltip": true,
                "tooltip-format": "锁屏"
        },
        "custom/reboot": {
                "format": "<span color='#e0af68'>  </span>",
                "on-click": "systemctl reboot",
                "tooltip": true,
                "tooltip-format": "重启"
        },
        "custom/notifications": {
                "format": "", // Glocke (Font Awesome)
                "tooltip": false,
                "on-click": "swaync-client --toggle-panel",
                "on-click-right": "swaync-client --close-panel",
                "interval": 0
        },
        "custom/power": {
                "format": "<span color='#f7768e'>  </span>",
                "on-click": "systemctl poweroff",
                "tooltip": true,
                "tooltip-format": "关机"
        },
        "pulseaudio": {
                "format": "<span color='#9ece6a'>{icon}</span>{volume}% ",
                "format-muted": "<span color='#f7768e'> 󰖁 </span>0% ",
                "format-icons": {
                        "headphone": "<span color='#bb9af7'>  </span>",
                        "hands-free": "<span color='#bb9af7'>  </span>",
                        "headset": "<span color='#bb9af7'>  </span>",
                        "phone": "<span color='#7dcfff'>  </span>",
                        "portable": "<span color='#7dcfff'>  </span>",
                        "car": "<span color='#ff9e64'>  </span>",
                        "default": [
                                "<span color='#565f89'>  </span>",
                                "<span color='#e0af68'>  </span>",
                                "<span color='#9ece6a'>  </span>"
                        ]
                },
                "on-click-right": "pavucontrol -t 3",
                "on-click": "pactl -- set-sink-mute 0 toggle",
                "tooltip": true,
                "tooltip-format": "当前系统声音: {volume}%"
        },
        "memory": {
                "format": "<span color='#bb9af7'>  </span>{used:0.1f}G/{total:0.1f}G ",
                "tooltip": true,
                "tooltip-format": "当前内存占比: {used:0.2f}G/{total:0.2f}G"
        },
        "cpu": {
                "format": "<span color='#ff9e64'>  </span>{usage}% ",
                "tooltip": true
        },
        "custom/gpu": {
                "format": "<span color='#7aa2f7'>󰢮  </span>{}",
                "exec": "~/.config/waybar/scripts/gpu.sh",
                "interval": 2,
                "return-type": "json",
                "tooltip": true
        },
        "clock": {
                "interval": 1,
                "timezone": "Europe/Berlin",
                "format": "<span color='#bb9af7'>  </span>{:%a, %d.%m. %H:%M} ",
                "tooltip": true,
                "tooltip-format": "{:L%Y 年 %m 月 %d 日, %A}"
        },
        "tray": {
                "icon-size": 17,
                "spacing": 6
        },
        "backlight": {
                "device": "intel_backlight",
                "format": "<span color='#e0af68'>{icon}</span>{percent}% ",
                "tooltip": true,
                "tooltip-format": "当前屏幕亮度: {percent}%",
                "format-icons": [
                        "<span color='#414868'> 󰃞 </span>",  // 暗 - 深灰
                        "<span color='#565f89'> 󰃝 </span>",  // 中 - 灰
                        "<span color='#e0af68'> 󰃟 </span>",  // 亮 - 柠檬黄
                        "<span color='#e0af68'> 󰃠 </span>"   // 最亮 - 金色
                ]
        }
}
